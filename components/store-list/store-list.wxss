.actice-item .item {
  display: flex;
  line-height: 40rpx;
  font-size: 26rpx;
  margin-bottom: 10rpx;
  color: #333;
}

.actice-item .active-icon {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  text-align: center;
  margin-right: 10rpx;
}

.actice-item .active-text {
  width: 440rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

