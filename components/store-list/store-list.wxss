@import '../../style/iconfont.wxss';
.store{
  margin-bottom: 40rpx;
}
.store-info {
  display: flex;
  height: 160rpx;
}

.store-img {
  width: 180rpx;
  margin: 0 20rpx;
  box-sizing: border-box;
  text-align: center;
}

.store-img-item {
  width: 160rpx;
  height: 160rpx;
}

.info {
  font-size: 26rpx;
  width: 100%;
}

.info .store-name {
  font-size: 30rpx;
  font-weight: 700;
}

.icon-xingxing-copy, .icon-xing1 {
  color: #ffcc01;
}

.icon-xingxing-copy-copy {
  color: #eee;
}

.info .score {
  margin-left: 10rpx;
}

.info .saleMonth {
  margin-left: 30rpx;
}

.info .delTime {
  float: right;
  margin-right: 20rpx;
}

