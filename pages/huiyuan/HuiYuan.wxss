/* pages/HuiYuan/HuiYuan.wxss */
.all{
  display: flex;
  flex-direction: row;
  height: 60px;
  align-items: center;
  padding-left: 10px;
}
.bottom {
  background-color: #ffffff;
  height: 60px;
  position: fixed;
  bottom: 0px;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.detail2 {
  font-size: 15px;
  position: absolute;
  right: 10px;
  margin-top: 15px;
  color: #888888;
}
.font {
  font-size: 20px;
  text-align: center;
  background-color: rgba(243, 191, 78, 0.582);
}
.font1{
  font-size: 20px;
  float: left;
}
.font2{
  margin-top: 10px;
  font-size: 15px;
  float: right;
  color: blue;
}
.itm {
  display: flex;
  flex-direction: row;
  background-color: rgba(221, 178, 98, 0.548);
}
.image_center {
  height: 150px;
  display: flex;              /*flex布局*/
  justify-content: center;    /*水平轴线居中 */
  align-items: center;        /*垂直居中 */
  background-color: #ffc640;
}
.info-bottom{
  position: fixed;
  z-index: 999;
  width: 100%;
  bottom: 0;
  background-color: white;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.item{
  width: 30%;
  height: 100px;
  border: 1px solid #979a9b;
  border-radius: 5px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin: 0 auto;
  text-align: center;
  background-color: rgba(233, 188, 92, 0.527);
}
.shop_itemactive{
  width: 30%;
  height: 100px;
  border-radius: 5px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin: 0 auto;
  text-align: center;
  border: 1px solid #ff6803c5;
  background-color: rgba(241, 184, 59, 0.356);
}
.items {
  padding: 10px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-left;
  background-color: #ffc640;
}

.left-btn{
  float: left;
  background-color: #f1f1f1;
  color: #33ccff;
}
.line {
  height: 5px;
  width: 100%;
  background: #c92222d0;
  opacity: 0.5;
}
.line1 {
  height: 1px;
  width: 100%;
  background-color: #666666;
  opacity: 0.2;
}
.name_top {
  height: 45rpx;
  font-size: 15px;
}
.name_but {
  height: 50rpx;
  font-size: 13px;
  color: rgb(150, 125, 125);
}
.opr{
  border-radius: 20px;
  position: absolute;
  right: 0px;
  width: 120px;
  font-size: 15px;
  font-weight: bold;
  background-color: #FC5531; 
  height: 60px;
  text-align: center;
  line-height: 60px;
  color: #ffffff;
}
.order {
  padding-top: 15px;
  padding-left: 5px;
  padding-bottom: 15px;
  font-size: 20px;
}
.popup-box{
  position: absolute;
  z-index: 99;
  top: 0;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
.price {
  color: rgb(184, 58, 58);
  margin-top: 4px;
  font-size: 16px;
}
.right-btn{
  float: right;
  background-color: #33ccff;
  color: white;
}
.row-btn{
  flex-direction: row;
  align-items: center;
  border-top: 3rpx dashed #f1f1f1;
}
.row-info{
  width: 100%;
  height: 90%;
  color: #555666;
  font-size: 14px;
  font-family: Arial, Helvetica, sans-serif;
  overflow: auto;
}
.selectAll{
  width: 80px;
  text-align: center;
  font-size: 15px;
  font-weight: bold;
}
.total{
  width: 200px;
  font-size: 15px;
  color: #ff0000;
  font-weight: bold;
}